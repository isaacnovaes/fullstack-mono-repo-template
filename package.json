{
  "name": "bun-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev:server": "bun --filter './packages/server' dev",
    "dev:client": "bun --filter './packages/client' dev",
    "dev": "bun run dev:server & bun run dev:client",
    "build:server": "bun build packages/server/src/index.ts --outdir packages/server/dist --target bun",
    "build:client": "bun --cwd packages/client build",
    "build": "bun run build:server && bun run build:client",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:client": "bun --filter './packages/client' lint",
    "lint:server": "bun --filter './packages/server' lint",
    "lint:shared": "bun --filter './packages/shared' lint",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "prepare": "husky"
  },
  "dependencies": {
    "hono": "^4.6.14",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/bun": "latest",
    "eslint": "^9.17.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "oxfmt": "^0.34.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.18.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "oxfmt --no-error-on-unmatched-pattern"
    ]
  }
}
